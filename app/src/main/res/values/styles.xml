<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#37474F</item>
        <item name="colorPrimaryDark">#263238</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="quesTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#37474F</item>
        <item name="colorPrimaryDark">#263238</item>
        <item name="colorAccent">#ff7835</item>
    </style>

    <style name="ProfileTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/backgroundsplash</item>
    </style>

    <style name="homeTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="title">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="title.expanded">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="title.collapsed">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="subtitle">
        <item name="android:textColor">#fff</item> <!-- I only change the color -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="timelineTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">#607D8B</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
